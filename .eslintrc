{
    "plugins": ["react"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "semi": [2, "always"],
        "indent": ["warn", "tab"],
        "object-curly-spacing": ["error", "never"],
        "max-len": ["warn", {"code": 80, "tabWidth": 2}]
    },
    "settings": {
        "react": {
            "version": "16.9"
        }
    }
}